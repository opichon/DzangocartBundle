<?xml version="1.0" encoding="UTF-8"?>
<database name="default" namespace="Dzangocart\Bundle\DzangocartBundle\Propel" defaultIdMethod="native">

  <table name="account">
    <column name="id" type="integer" required="true" primaryKey="true" autoIncrement="true" />
    <column name="owner_id" type="integer" required="true" />
    <column name="surname" type="varchar" size="30" required="false" />
    <column name="given_names" type="varchar" size="30" required="false" />
    <column name="gender" type="varchar" size="1" required="false" />
    <column name="email" type="varchar" size="100" required="true" />
    <column name="organization" type="varchar" size="50" required="false" />
    <column name="vat_id" type="varchar" size="20" required="false" />
    <column name="line1" type="varchar" size="30" required="true" />
    <column name="line2" type="varchar" size="30" required="false" />
    <column name="city" type="varchar" size="30" required="true" />
    <column name="state" type="varchar" size="30" required="false" />
    <column name="zip" type="varchar" size="15" required="false" />
    <column name="country" type="varchar" size="2" required="true" />
    <column name="telephone" type="varchar" size="20" required="true" />
    <column name="fax" type="varchar" size="20" required="false" />
    <column name="mobile" type="varchar" size="20" required="false" />
    <column name="expiration_date" type="date" required="false" />
    <foreign-key foreignTable="fos_user" onDelete="restrict" phpName="owner">
      <reference local="owner_id" foreign="id" />
    </foreign-key>
    <unique>
      <unique-column name="email" />
    </unique>
    <behavior name="timestampable" />
  </table>
</database>