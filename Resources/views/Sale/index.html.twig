{% extends "DzangocartBundle::admin.html.twig" %}

{% trans_default_domain "dzangocart" %}

{% block page_class %}{% endblock %}

{% block dzangocart_page_title %}{% trans %}dzangocart.sales.page_title{% endtrans %}{% endblock %}

{% block dzangocart_content %}
{% include "DzangocartBundle:Sale:sales.html.twig" %}
{% endblock %}

{% block dzangocart_head_style %}
    {{ parent() }}
    {% stylesheets filter="cssrewrite" output="css/*.css"
        'bundles/dzangocart/vendor/datatables-bootstrap3/BS3/assets/css/datatables.css'
        'bundles/dzangocart/vendor/bootstrap-daterangepicker/daterangepicker-bs3.css'
        'bundles/dzangocart/css/dzangocart.css'
        'bundles/dzangocart/css/table.css'
        'bundles/dzangocart/css/sales.css'
    %}
        <link href="{{ asset_url }}" type="text/css" rel="stylesheet" media="screen" />
    {% endstylesheets %}
{% endblock %}

{% block dzangocart_foot_script %}
    {{ parent() }}
    {% javascripts
        'bundles/dzangocart/vendor/datatables/media/js/jquery.dataTables.min.js'
        'bundles/dzangocart/vendor/datatables-bootstrap3/BS3/assets/js/datatables.min.js'
        'bundles/dzangocart/vendor/momentjs/moment.js'
        'bundles/dzangocart/vendor/momentjs/min/moment-with-langs.js'
        'bundles/dzangocart/vendor/bootstrap-daterangepicker/daterangepicker.js'
        'bundles/dzangocart/js/scripts/sales.js'
    %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
    <script>
    dzangocart.sales = {
        dataTables: {
            ajax: "{{ path('dzangocart_sales_list', { _format: 'json' }) }}"
        },
        daterangepicker: {
            format: "{{ config.date_format|upper }}"
        }
    };
    </script>
{% endblock %}
