{% extends "DzangocartBundle::layout.html.twig" %}

{% trans_default_domain "dzangocart" %}

{% block page_class %}{{ parent() }} sales{% endblock %}

{% block dzangocart_page_title %}{% trans %}dzangocart.sales.page_title{% endtrans %}{% endblock %}

{% block dzangocart_content %}
<table class="table table-condensed">
    <thead>
        <tr>
            <th class="check"><input type="checkbox" id="checkall" /></th>
            <th class="date">{% trans %}dzangocart.sales.date{% endtrans %}</th>
            <th class="order_no">{% trans %}dzangocart.sales.order_no{% endtrans %}</th>
            <th class="customer">{% trans %}dzangocart.sales.customer{% endtrans %}</th>
            <th class="item">{% trans %}dzangocart.sales.item{% endtrans %}</th>
            <th class="quantity">{% trans %}dzangocart.sales.quantity{% endtrans %}</th>
            <th class="currency">{% trans %}dzangocart.sales.currency{% endtrans %}</th>
            <th class="net">{% trans %}dzangocart.sales.net{% endtrans %}</th>
            <th class="tax">{% trans %}dzangocart.sales.tax{% endtrans %}</th>
            <th class="gross">{% trans %}dzangocart.sales.gross{% endtrans %}</th>
            <th class="paid">{% trans %}dzangocart.sales.paid{% endtrans %}</th>
            <th class="affiliate">{% trans %}dzangocart.sales.affiliate{% endtrans %}</th>
            <th class="demo">{% trans %}dzangocart.sales.test{% endtrans %}</th>
            <th class="actions">{% trans %}dzangocart.sales.actions{% endtrans %}</th>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>
<pre>{{ data }}</pre>
{% endblock %}

{% block head_style %}
    {{ parent() }}
    {% stylesheets filter="cssrewrite" output="css/*.css"
        'bundles/uamdatatables/css/jquery.dataTables_bootstrap.css'
        'bundles/dzangocart/css/dzangocart.css'
        'bundles/dzangocart/css/sales.css'
    %}
        <link href="{{ asset_url }}" type="text/css" rel="stylesheet" media="screen" />
    {% endstylesheets %}
{% endblock head_style %}

{% block head_script %}
    {{ parent() }}
    <script>
    dzangocart.sales = {
        dataTables: {
            sAjaxSource: "{{ path('dzangocart_sales') }}"
        }
    };
    </script>
{% endblock head_script %}

{% block foot_script %}
    {{ parent() }}
    {% javascripts
        'bundles/porotcore/js/vendor/handlebars.js'
        'bundles/uamdatatables/js/jquery.dataTables.min.js'
        'bundles/uamdatatables/js/jquery.dataTables_bootstrap.js'
        'bundles/dzangocart/js/scripts/sales.js'
    %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}