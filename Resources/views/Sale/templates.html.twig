{% extends "DzangocartBundle::templates.html.twig" %}

{% trans_default_domain "dzangocart" %}

{% block templates %}
{{ parent() }}

<template class="sale paid">
{% verbatim %}{{#paid}}{% endverbatim %}
	<i class="fa fa-thumbs-o-up"></i>
{% verbatim %}{{/paid}}{% endverbatim %}
{% verbatim %}{{^paid}}{% endverbatim %}
	<i class="fa fa-exclamation-triangle"></i>
{% verbatim %}{{/paid}}{% endverbatim %}
</template>

<template class="orders actions">
<div class="btn-group">
	<button type="button" class="dropdown-toggle" data-toggle="dropdown">
		<i class="fa fa-cog"></i>
	</button>
	<ul class="dropdown-menu dropdown-menu-right navbar-right" role="menu">
		<li>
			<a href="{% verbatim %}{{urls.order}}{% endverbatim %}">{% trans %}orders.actions.show{% endtrans %}</a>
		</li>
	</ul>
</div>
</template>
{% endblock %}
