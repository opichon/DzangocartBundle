{% trans_default_domain "dzangocart" %}

<table class="table table-condensed" id="payments">
    <thead>
        <tr>
            <th class="check"><input type="checkbox" id="checkall" /></th>
            <th class="datetime">{% trans %} payments.date {% endtrans %}</th>
            <th class="id">{% trans %} payments.order_id {% endtrans %}</th>
            <th class="gateway">{% trans %} payments.gateway {% endtrans %}</th>
            <th class="type">{% trans %} payments.type {% endtrans %}</th>
            <th class="amount">{% trans %} payments.amount {% endtrans %}</th>
            <th class="status">{% trans %} payments.status.title {% endtrans %}</th>
            <th class="test">{% trans %} payments.test {% endtrans %}</th>
            <th class="actions"><i class="fa fa-cog"></i></th>
        </tr>
        <tr class="filters">
            <th></th>
            <th></th>
            <th>{{ form_widget(filter.order_id) }}</th>
            <th>{{ form_widget(filter.gateway_id) }}</th>
            <th></th>
            <th></th>
            <th>{{ form_widget(filter.status) }}</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>
