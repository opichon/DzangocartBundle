{% trans_default_domain "dzangocart" %}

<div class="dzangocart payments">
    {% block filters %}
    {% include "DzangocartBundle:Payment:filters.html.twig" with { form: form } %}
    {% endblock %}
    <table class="table table-condensed" id="payments">
        <thead>
            <tr>
                <th class="check"><input type="checkbox" id="checkall" /></th>
                <th class="datetime">{% trans %}payment.payments.date{% endtrans %}</th>
                <th class="id">{% trans %}payment.payments.order_id{% endtrans %}</th>
                <th class="gateway">{% trans %}payment.payments.gateway{% endtrans %}</th>
                <th class="type">{% trans %}payment.payments.type{% endtrans %}</th>
                <th class="amount">{% trans %}payment.payments.transaction.amount{% endtrans %}</th>
                <th class="status">{% trans %}payment.payments.status{% endtrans %}</th>
                <th class="test">{% trans %}dzangocart.direct_payments.test{% endtrans %}</th>
                <th class="actions"><i class="fa fa-cog"></i></th>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>
</div>
