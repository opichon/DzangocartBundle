{% extends "DzangocartBundle::layout.html.twig" %}

{% trans_default_domain "dzangocart" %}

{% block page_class %}{% endblock %}

{% block dzangocart_page_title %}{% trans with { '%order_id%': order.orderId } %}dzangocart.order.page_title{% endtrans %}{% endblock %}

{% block dzangocart_content %}
{% include "DzangocartBundle:Order:order.html.twig" %}
<pre>{{ data }}</pre>
{% endblock %}

{% block head_style %}
    {{ parent() }}
    {% stylesheets filter="cssrewrite" output="css/*.css"
        'bundles/dzangocart/css/dzangocart.css'
        'bundles/dzangocart/css/order.css'
    %}
        <link href="{{ asset_url }}" type="text/css" rel="stylesheet" media="screen" />
    {% endstylesheets %}
{% endblock head_style %}

{% block foot_script %}
    {{ parent() }}
    {% javascripts
        'bundles/dzangocart/js/scripts/order.js'
    %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
    <script>
    dzangocart.order = {
    };
    </script>
{% endblock %}