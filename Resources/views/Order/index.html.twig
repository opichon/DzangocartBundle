{% extends "DzangocartBundle::admin.html.twig" %}

{% trans_default_domain "dzangocart" %}

{% block page_class %}{% endblock %}

{% block dzangocart_page_title %}{% trans %}dzangocart.orders.page_title{% endtrans %}{% endblock %}

{% block dzangocart_content %}
{% include "DzangocartBundle:Order:orders.html.twig" %}
{% endblock %}

{% block dzangocart_head_style %}
    {{ parent() }}
    {% stylesheets filter="cssrewrite" output="css/*.css"
        'bundles/uamdatatables/css/jquery.dataTables_bootstrap.css'
        'bundles/dzangocart/js/vendor/bootstrap-daterangepicker/daterangepicker-bs2.css'
        'bundles/dzangocart/css/dzangocart.css'
        'bundles/dzangocart/css/table.css'
        'bundles/dzangocart/css/orders.css'
    %}
        <link href="{{ asset_url }}" type="text/css" rel="stylesheet" media="screen" />
    {% endstylesheets %}
{% endblock %}

{% block dzangocart_foot_script %}
    {{ parent() }}
    {% javascripts
        'bundles/uamdatatables/js/jquery.dataTables.min.js'
        'bundles/uamdatatables/js/jquery.dataTables_bootstrap.js'
        'bundles/dzangocart/js/vendor/moment/moment.js'
        'bundles/dzangocart/js/vendor/moment/lang/fr.js'
        'bundles/dzangocart/js/vendor/bootstrap-daterangepicker/daterangepicker.js'
        'bundles/dzangocart/js/scripts/orders.js'
    %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
    <script>
    dzangocart.orders = {
        dataTables: {
            sAjaxSource: "{{ path('dzangocart_orders', { _format: 'json' }) }}"
        },
        date_format: "{{ config.date_format }}",
        daterangepicker: {
            format: "{{ config.date_format|upper }}"
        }
    };
    </script>
{% endblock %}
