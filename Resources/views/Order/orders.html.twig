{% trans_default_domain "dzangocart" %}

<table class="table table-condensed" id="orders">
	<thead>
		<tr>
			<th class="check"><input type="checkbox" id="checkall" /></th>
			<th class="datetime">{% trans %}dzangocart.orders.date{% endtrans %}</th>
			<th class="order_id">{% trans %}dzangocart.orders.order_id{% endtrans %}</th>
			<th class="customer">{% trans %}dzangocart.orders.customer{% endtrans %}</th>
			<th class="center net">{% trans %}dzangocart.orders.net{% endtrans %}</th>
			<th class="center tax">{% trans %}dzangocart.orders.tax{% endtrans %}</th>
			<th class="center gross">{% trans %}dzangocart.orders.gross{% endtrans %}</th>
			<th class="center paid">{% trans %}dzangocart.orders.paid{% endtrans %}</th>
			<th class="affiliate">{% trans %}dzangocart.orders.affiliate{% endtrans %}</th>
			<th class="center demo">{% trans %}dzangocart.orders.test{% endtrans %}</th>
			<th class="actions"><i class="fa fa-cog"></i></th>
		</tr>
        <tr class="filters">
            <th></th>
            <th></th>
            <th class="filters_keyup">{{ form_widget(filters.order_id) }}</th>
            <th class="customer">{{ form_widget(filters.customer) }}</th>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
	</thead>
	<tbody>
	</tbody>
</table>
