{% extends "DzangocartBundle::admin.html.twig" %}

{% trans_default_domain "dzangocart" %}

{% block dzangocart_page_title %}{% trans %}catalogue.page_title{% endtrans %}{% endblock %}

{% block body_class %}catalogue{% endblock %}

{% block dzangocart_content %}
	{% for flashMessage in app.session.flashbag.get('Category.error') %}
		<div class="alert alert-danger">
			{{ flashMessage }}
		</div>
   {% endfor %}
	<table class="table treetable">
		<thead>
			<tr>
				<th class="name">{% trans %}catalogue.name{% endtrans %}</th>
				<th class="code">{% trans %}catalogue.code{% endtrans %}</th>
				<th class="code">{% trans %}catalogue.suffix{% endtrans %}</th>
				<th class="price">{% trans %}catalogue.price{% endtrans %}</th>
				<th class="price">{% trans %}catalogue.tax_included{% endtrans %}</th>
				<th class="actions"><i class="fa fa-cog"></i></th>
			</tr>
		</thead>
		<tbody>
		{% include "DzangocartBundle:Catalogue:catalogue.html.twig" %}
		</tbody>
	</table>

{% endblock %}

{% block dzangocart_head_style %}
	{{ parent() }}
	{% include "DzangocartBundle:Catalogue:catalogue_head_style.html.twig" %}
{% endblock %}

{% block dzangocart_foot_script %}
	{{ parent() }}
	{% include "DzangocartBundle:Catalogue:catalogue_foot_script.html.twig" %}
{% endblock %}
